---
 .../sm8250/damo-cockpit8250-HiFi.conf         | 48 +++++++++++++++++++
 ucm2/Qualcomm/sm8250/damo-cockpit8250.conf    |  8 ++++
 ucm2/conf.d/sm8250/damo-DAMOCockpit8250-.conf |  1 +
 3 files changed, 57 insertions(+)
 create mode 100644 ucm2/Qualcomm/sm8250/damo-cockpit8250-HiFi.conf
 create mode 100644 ucm2/Qualcomm/sm8250/damo-cockpit8250.conf
 create mode 120000 ucm2/conf.d/sm8250/damo-DAMOCockpit8250-.conf

diff --git a/ucm2/Qualcomm/sm8250/damo-cockpit8250-HiFi.conf b/ucm2/Qualcomm/sm8250/damo-cockpit8250-HiFi.conf
new file mode 100644
index 0000000..27672d9
--- /dev/null
+++ b/ucm2/Qualcomm/sm8250/damo-cockpit8250-HiFi.conf
@@ -0,0 +1,48 @@
+SectionVerb {
+	Value {
+		TQ "HiFi"
+	}
+
+	# Note that if some audio paths are not pre-configured here,
+	# allowing audio streams to be input to the device without returning errors,
+	# it will cause PipeWire to fail in parsing ALSA UCM.
+	EnableSequence [
+		cset "name='DISPLAY_PORT_RX Audio Mixer MultiMedia1' on"
+		cset "name='PRI_MI2S_RX Audio Mixer MultiMedia2' on"
+	]
+}
+
+SectionDevice."DisplayPort" {
+	Comment "DisplayPort"
+
+	Value {
+		PlaybackPriority 200
+		PlaybackPCM "hw:${CardId},0" # plughw won't work
+	}
+
+	EnableSequence [
+		cset "name='DISPLAY_PORT_RX Audio Mixer MultiMedia1' on"
+	]
+
+	DisableSequence [
+		cset "name='DISPLAY_PORT_RX Audio Mixer MultiMedia1' off"
+	]
+}
+
+SectionDevice."Speakers" {
+	Comment "Speakers"
+
+	Value {
+		PlaybackPriority 100
+		PlaybackPCM "hw:${CardId},1" # plughw won't work
+		PlaybackChannels 4
+	}
+
+	EnableSequence [
+		cset "name='PRI_MI2S_RX Audio Mixer MultiMedia2' on"
+	]
+
+	DisableSequence [
+		cset "name='PRI_MI2S_RX Audio Mixer MultiMedia2' off"
+	]
+}
diff --git a/ucm2/Qualcomm/sm8250/damo-cockpit8250.conf b/ucm2/Qualcomm/sm8250/damo-cockpit8250.conf
